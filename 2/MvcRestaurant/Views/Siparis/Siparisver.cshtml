@model MvcRestaurant.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "Siparisver";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Rezervasyon Ekle</h2>
<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Yemek Seçimi</label>
        @*<input type="text" class="form-control" name="Uye" />*@
        @Html.TextBoxFor(x => x.YEMEK, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Üye Ad</label>
        @*<input type="text" class="form-control" name="Uye" />*@
        @Html.TextBoxFor(x => x.UYE, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel Adı</label>
        @*<input type="text" class="form-control" name="Uye" />*@
        @Html.TextBoxFor(x => x.PERSONEL, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Rezervasyon Tarihi</label>
        <input type="datetime" class="form-control" name="SIPARISTAHi" value="@DateTime.Now.ToString()" />
    </div>
    <div style="margin-top:15px">
        <label>Masa No</label>
        @*<input type="password" class="form-control" name="Uye" />*@
        @Html.TextBoxFor(x => x.MasaNo, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kisi Sayisi</label>
        @*<input type="password" class="form-control" name="Uye" />*@
        @Html.TextBoxFor(x => x.KisiSayisi, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">Rezervasyon Ekle</button>
    </div>
</form>
